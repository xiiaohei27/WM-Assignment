@model List<int>
@{
    var showtime = ViewBag.Showtime;
    var movie = ViewBag.Movie;
    ViewBag.Title = $"Seats for {movie.Title} at {showtime.StartTime}";
}

<h2>@ViewBag.Title</h2>

<div class="seat-grid">
    @foreach (var seat in Model)
    {
        <div class="seat">
            @seat
        </div>
    }
</div>

<style>
    .seat-grid {
        display: grid;
        grid-template-columns: repeat(10, 40px);
        gap: 5px;
    }

    .seat {
        width: 40px;
        height: 40px;
        background-color: #eee;
        border: 1px solid #ccc;
        text-align: center;
        line-height: 40px;
    }
</style>
